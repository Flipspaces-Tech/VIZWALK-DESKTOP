{
  "name": "vizwalk-desktop",
  "version": "1.0.4",
  "description": "Vizwalk Desktop App",
  "author": "You",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "release": "git add . && git commit -m \"%npm_config_msg\" && git push && npm run publish"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "finalhandler": "^1.2.0",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.1"
  },
  "build": {
    "appId": "com.vizwalk.desktop",
    "files": [
      "main.js",
      "preload.js",
      "app-build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "app-build",
        "to": "app-build"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Flipspaces-Tech",
        "repo": "VIZWALK-DESKTOP"
      }
    ]
  }
}
